{
    "name": "tailwind-standalone",
    "version": "1.0.0",
    "description": "Using tailwind directly in Node.js",
    "type": "module",
    "scripts": {
        "build": "tsup",
        "check": "biome check . --write"
    },
    "keywords": [],
    "author": "AkaraChen",
    "license": "ISC",
    "packageManager": "pnpm@9.6.0",
    "devDependencies": {
        "@akrc/tsconfig": "^1.1.0",
        "@biomejs/biome": "^1.8.3",
        "@types/node": "^22.1.0",
        "postcss": "^8.4.41",
        "tailwindcss": "^3.4.9",
        "tslib": "^2.6.3",
        "tsup": "^8.2.4",
        "typescript": "^5.5.4"
    },
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "main": "./dist/index.cjs",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "require": {
            "types": "./dist/index.d.cts",
            "default": "./dist/index.cjs"
        }
    },
    "files": ["dist"],
    "peerDependencies": {
        "postcss": "*",
        "tailwindcss": "*"
    },
    "readme": "README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/akarachen/tailwind-standalone"
    },
    "homepage": "https://github.com/akarachen/tailwind-standalone#readme"
}
